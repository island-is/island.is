            "format": "int64"
          },
          "reqeusterEmail": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CustomersListDocumentsOrderEnum": {
        "enum": ["Ascending", "Descending"],
        "type": "string"
      },
      "CustomersListDocumentsSortByEnum": {
        "enum": [
          "Date",
          "Category",
          "Type",
          "Sender",
          "Publication",
          "Subject"
        ],
        "type": "string"
      },
      "DocumentDTO": {
        "type": "object",
        "properties": {
          "fileName": {
