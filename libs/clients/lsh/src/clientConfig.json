  "paths": {
    "/api/blood": {
      "get": {
        "tags": ["Blood"],
        "summary": "Get blood information for national id",
        "parameters": [
          {
            "name": "locale",
            "in": "query",
            "description": "The locale for localization (e.g., 'is', 'en', etc.)",
            "schema": {
              "type": "string",
              "example": "is"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientBlood"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
