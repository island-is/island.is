{
  "openapi": "3.0.0",
  "info": {
    "title": "Forritunarskil þróunar á island.is",
    "version": "1.0",
    "contact": { "email": "api@ust.is" }
  },
  "servers": [{ "url": "/gatt/api/islandisdev" }],
  "paths": {
    "/permit_hunting": {
      "get": {
        "tags": ["permits"],
        "operationId": "permit_hunting",
        "parameters": [
          {
            "name": "X-Query-National-Id",
            "in": "header",
            "description": "Auðkenni einstaklings",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Veiðikortaréttindi",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PermitHunting" }
              }
            }
          },
          "400": { "description": "Invalid ID supplied" },
          "404": { "description": "No permit found" },
          "500": { "description": "Server Error" }
        }
      }
    },
    "/permit_ranger": {
      "get": {
        "tags": ["permits"],
        "operationId": "permit_ranger",
        "parameters": [
          {
            "name": "X-Query-National-Id",
            "in": "header",
            "description": "Auðkenni einstaklings",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Landvarðaréttindi",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PermitRanger" }
              }
            }
          },
          "400": { "description": "Invalid ID supplied" },
          "404": { "description": "No permit found" },
          "500": { "description": "Server Error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PermitHunting": {
        "title": "Hunting Permit",
        "description": "Hunting Permits in Iceland",
        "properties": {
          "personid": {
            "type": "string",
            "example": "0101305069",
            "readOnly": true
          },
          "personname": {
            "type": "string",
            "example": "Gervimaður Bandaríkin",
            "readOnly": true
          },
          "address": {
            "type": "string",
            "example": "Bandaríkin",
            "readOnly": true
          },
          "postal_code": {
            "type": "string",
            "example": "000",
            "readOnly": true
          },
          "postal_address": {
            "type": "string",
            "example": "Ótilgreint",
            "readOnly": true
          },
          "permit_category": {
            "type": "string",
            "example": "Almennt veiði- og hlunnindakort",
            "readOnly": true
          },
          "permit_number": {
            "type": "string",
            "example": "101003",
            "readOnly": true
          },
          "permit_validity": {
            "type": "string",
            "enum": ["Í gildi", "Ekki í gildi", "Valid", "Expired"],
            "readOnly": true
          },
          "valid_from": {
            "type": "string",
            "format": "date-time",
            "example": "2023-04-01T00:00:00Z",
            "readOnly": true
          },
          "valid_to": {
            "type": "string",
            "format": "date-time",
            "example": "2024-03-31T00:00:00Z",
            "readOnly": true
          },
          "permit_issued": {
            "type": "string",
            "format": "date-time",
            "example": "2023-04-01T16:45:00Z",
            "readOnly": true
          },
          "permit_for": {
            "type": "array",
            "items": { "type": "string", "example": "fuglum", "readOnly": true }
          },
          "benefits": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Benefit" }
          },
          "permit_renew_link": {
            "type": "string",
            "example": "https://ust.is/veidimenn",
            "readOnly": true
          },
          "personphoto": { "type": "string", "format": "byte" }
        },
        "type": "object"
      },
      "Benefit": {
        "title": "Benefit",
        "type": "object",
        "properties": {
          "benefit_land": { "type": "string", "example": "Brák" },
          "benefits_number": { "type": "string", "example": "25225" }
        }
      },
      "PermitRanger": {
        "title": "Ranger Permit",
        "description": "Ranger Permits in Iceland",
        "properties": {
          "personid": {
            "type": "string",
            "example": "0101305069",
            "readOnly": true
          },
          "personname": {
            "type": "string",
            "example": "Gervimaður Bandaríkin",
            "readOnly": true
          },
          "address": {
            "type": "string",
            "example": "Bandaríkin",
            "readOnly": true
          },
          "postal_code": {
            "type": "string",
            "example": "000",
            "readOnly": true
          },
          "postal_address": {
            "type": "string",
            "example": "Ótilgreint",
            "readOnly": true
          },
          "permit_number": {
            "type": "string",
            "example": "LV-101003",
            "readOnly": true
          },
          "permit_validity": {
            "type": "string",
            "enum": ["Í gildi", "Ekki í gildi", "Valid", "Expired"],
            "readOnly": true
          },
          "valid_from": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z",
            "readOnly": true
          },
          "valid_to": {
            "type": "string",
            "format": "date-time",
            "example": "2123-12-31T00:00:00Z",
            "readOnly": true
          },
          "permit_issued": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T16:45:00Z",
            "readOnly": true
          },
          "permit_for": {
            "type": "string",
            "example": "Landvarðaréttindi",
            "readOnly": true
          }
        },
        "type": "object"
      }
    }
  }
}
