{
  "openapi": "3.0.1",
  "info": {
    "title": "RulingsAPI",
    "description": "",
    "contact": {
      "name": "Homepage",
      "url": "https://onesystems.is"
    },
    "version": "v1"
  },
  "servers": [
    {
      "url": "/OneRulings"
    }
  ],
  "paths": {
    "/api/auth/token": {
      "post": {
        "tags": ["Auth"],
        "summary": "",
        "operationId": "getAuthToken",
        "parameters": [
          {
            "name": "X-API-KEY",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/rulings": {
      "get": {
        "tags": ["Rulings"],
        "summary": "Retrieves a list of rulings based on the provided request parameters.",
        "operationId": "getRulings",
        "parameters": [
          {
            "name": "Year",
            "in": "query",
            "description": "The year for which to retrieve rulings. Must be between 2020 and the current year.",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Limit",
            "in": "query",
            "description": "To define the download segmentation value i.e. the maximum number of records to be contained in the response. Default value : 100",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Offset",
            "in": "query",
            "description": "The number of the first record to be supplied in the segmented response message. Default value : 0",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetRulingsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/rulings/{id}/pdf": {
      "get": {
        "tags": ["Rulings"],
        "summary": "Retrieves the PDF document for a specific ruling by its ID.",
        "operationId": "getRulingPdf",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the ruling.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "byte"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/pdf": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "required": ["errorMessage", "errors"],
        "type": "object",
        "properties": {
          "errorMessage": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "success": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "GetRulingsResponse": {
        "required": ["rulings"],
        "type": "object",
        "properties": {
          "rulings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Item"
            },
            "nullable": true
          },
          "totalCount": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Item": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "publishedDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "TokenResponse": {
        "required": ["accessToken"],
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Please enter JWT with Bearer into field. Example: 'Bearer {token}'",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}
