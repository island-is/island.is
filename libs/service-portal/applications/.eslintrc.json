{
  "extends": ["plugin:@nx/react", "../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:portals-mypages",
                "onlyDependOnLibsWithTags": [
                  "lib:application-system",
                  "lib:portals-mypages",
                  "lib:portals",
                  "lib:react-spa",
                  "lib:react",
                  "lib:dom",
                  "lib:js"
                ]
              }
            ]
          }
        ]
      }
    },
    { "files": ["*.ts", "*.tsx"], "rules": {} },
    { "files": ["*.js", "*.jsx"], "rules": {} }
  ]
}
