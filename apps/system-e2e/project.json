// vi: ft=jsonc
{
  "name": "system-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/system-e2e/src",
  "projectType": "application",
  "prefix": "system-e2e",
  "generators": {},
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["bash {projectRoot}/build.sh"],
        "outputPath": "dist/{projectRoot}",
        "parallel": false
      },
      "configurations": {
        "production": {}
      },
      "outputs": ["{workspaceRoot}/dist/apps/system-e2e"]
    },
    "build-new": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "main": "{projectRoot}/playwright.config.ts",
        "tsConfig": "{projectRoot}/tsconfig.json",
        "external": ["@nx/*", "fs"],
        "generatePackageJson": true,
        "sourceMap:": true,
        "deleteOutputPath": true,
        "format": [
          // "esm",
          "cjs"
        ],
        "thirdParty": true,
        "outputPath": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "smoke:old": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn playwright test apps/system-e2e/src/tests/*/smoke -c apps/system-e2e/src"
      }
    },
    "acceptance:old": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test apps/system-e2e/src/tests -c apps/system-e2e/src"
      }
    },
    "smoke": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts",
        "skipInstall": true
      }
    },
    "acceptance": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "grep": "/acceptance/"
      }
    },
    "e2e:all": {
      "executor": "@nx/playwright:playwright",
      "options": {}
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts",
        "grep": "e2e/example.spec.ts",
        "skipInstall": true
      }
    },
    "docker-playwright": {}
  },
  "tags": ["scope:e2e"]
}
