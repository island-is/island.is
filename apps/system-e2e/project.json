{
  "name": "system-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/system-e2e/src",
  "projectType": "application",
  "prefix": "system-e2e",
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputFileName": "main.js",
        "format": ["cjs"],
        "deleteOutputPath": false,
        "generatePackageJson": true,
        "esbuildConfig": "{projectRoot}/esbuild.config.js",
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/playwright.config.ts",
        "tsConfig": "{projectRoot}/tsconfig.json",
        "minify": false,
        "watch": false
      }
    },
    "build:old": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["bash {projectRoot}/build.sh"],
        "outputPath": "dist/{projectRoot}",
        "parallel": false
      },
      "configurations": {
        "production": {}
      },
      "outputs": ["{workspaceRoot}/dist/apps/system-e2e"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "smoke": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts"
      }
    },
    "acceptance": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts",
        "grep": "/acceptance/"
      }
    },
    "e2e:all": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts"
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts",
        "grep": "e2e/example.spec.ts",
        "skipInstall": true
      }
    },
    "docker-playwright": {}
  },
  "tags": ["scope:e2e"]
}
