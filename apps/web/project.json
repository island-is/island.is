{
  "root": "apps/web",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "outputPath": "dist/apps/web",
        "commands": ["yarn nx build-next web", "yarn nx build-server web"]
      },
      "configurations": {
        "production": {
          "args": "--prod"
        }
      }
    },
    "build-next": {
      "executor": "@nrwl/next:build",
      "options": {
        "root": "apps/web",
        "outputPath": "dist/apps/web"
      },
      "configurations": {
        "production": {}
      },
      "outputs": ["{options.outputPath}"]
    },
    "build-server": {
      "executor": "@nrwl/node:webpack",
      "options": {
        "outputPath": "dist/apps/web",
        "main": "apps/web/server.ts",
        "tsConfig": "apps/web/tsconfig.json",
        "maxWorkers": 2,
        "assets": []
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      },
      "outputs": ["{options.outputPath}"]
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "web:build-server"
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "web:build:production"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/web/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/web/jest.config.js",
        "passWithNoTests": true
      },
      "outputs": ["coverage/apps/web"]
    },
    "schemas/codegen": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "graphql-codegen --config apps/web/codegen.yml"
      }
    },
    "dev/init": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "yarn get-secrets web",
          "echo '#############'",
          "echo '# ATTENTION #'",
          "echo '#############'",
          "echo ''",
          "echo 'You must manually add these to your .env.secrets file (used for e.g. extract-strings):'",
          "echo '  CONTENTFUL_HOST '",
          "echo '  CONTENTFUL_MANAGEMENT_ACCESS_TOKEN '",
          "echo ''",
          "yarn nx run api:dev-init"
        ],
        "parallel": false
      }
    },
    "dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["./scripts/run-es-proxy.sh", "yarn nx run api:dev", "yarn start web"],
        "parallel": true
      }
    },
    "docker-next": {}
  },
  "tags": []
}
