{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "@types/styled-components-react-native"],
    "paths": {
      "@ui": ["./src/ui"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "test-setup.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
}
