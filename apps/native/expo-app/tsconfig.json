{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@island.is/shared/problem": [
        "../../../libs/shared/problem/src/index.ts"
      ],
      "@island.is/shared/mocking": [
        "../../../libs/shared/mocking/src/index.ts"
      ],
      "@island.is/shared/types": [
        "../../../libs/shared/types/src/index.ts"
      ],
      "@island.is/application/types": [
        "../../../libs/application/types/src/lib/ApplicationTypes.ts"
      ],
    }
  },
  "exclude": ["node_modules", "**/*.stories.tsx"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/types/styled-components.d.ts",
    "src/types/images.d.ts"
  ],
}
